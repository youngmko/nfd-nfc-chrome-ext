{
  "manifest_version": 3,
  "name": "Gmail Korean Filename NFD→NFC Normalizer",
  "version": "1.1.0",
  "description": "Gmail에서 첨부파일 업로드 시 한글 파일명을 NFD에서 NFC로 정규화합니다.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-gmail.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}